<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:fitsSystemWindows="true"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Xe Tải"
        android:textSize="20sp"
        android:textColor="@color/important1"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTruckName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên Xe Tải"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editTextTruckLicensePlate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Biển Số Xe"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editTextTruckName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editTextTruckDriver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên Tài Xế"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editTextTruckLicensePlate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editTextTruckCapacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dung Tích Xe Tải"
        android:inputType="number"
        android:textColor="@color/text_color"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editTextTruckDriver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
